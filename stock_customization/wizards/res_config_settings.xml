<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.order.span</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="after">
                <h2>Schedule Date Span</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="working_week_structure" string="Working Week Structure"/>
                            <div class="text-muted">
                                Define your Working Week Structure Either You Are Going To Work 5, 6 Or 7 Days A Week!
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="working_week_structure" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="order_span" string="Schedule Date Plan"/>
                            <div class="text-muted">
                                Define Span of Order Date You Want To Have Between Order Date And Schedule Date!
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="order_span" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
